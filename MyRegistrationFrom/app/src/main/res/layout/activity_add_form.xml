<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.AddFormActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/dark_colour_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:id="@+id/txtBack"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/light_creame"
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            android:textColor="@color/light_creame"
            android:text="ADD DETAILS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            android:background="@drawable/image_add"
            android:id="@+id/imgAddImage"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"/>

        <TextView
            android:layout_gravity="center"
            android:hint="Add your image above"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="@dimen/_10sdp"
            app:boxStrokeColor="@color/dark_colour_header"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Full Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtName"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="@dimen/_10sdp"
            app:boxStrokeColor="@color/dark_colour_header"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Age">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAge"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>



        <RadioGroup
            android:id="@+id/rdgGender"
            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/dark_colour_header"
                android:textStyle="bold"
                android:text="GENDER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_marginStart="@dimen/_10sdp"
                android:text="MALE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_marginStart="@dimen/_10sdp"
                android:text="FEMALE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="@dimen/_10sdp"
            app:boxStrokeColor="@color/dark_colour_header"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Address">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAddress"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="@dimen/_10sdp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            app:boxStrokeColor="@color/dark_colour_header"
            android:layout_height="wrap_content"
            android:hint="Enter Your Mobile Number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMobile"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:textColor="@color/dark_colour_header"
            android:layout_marginStart="@dimen/_15sdp"
            android:textStyle="bold"
            android:text="HOBBIES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/chkMovies"
            android:text="Movies"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/chkSports"
                android:text="Sports"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/chkCooking"
                android:text="Cooking"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <Button
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:backgroundTint="@color/dark_colour_header"
            android:id="@+id/btnSubmit"
            android:text="SUBMIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>