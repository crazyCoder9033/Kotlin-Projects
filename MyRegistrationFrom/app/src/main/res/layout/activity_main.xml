<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/appDrawer"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/dark_colour_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <ImageView
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/imgMenuButton"
                android:src="@drawable/mennuu"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:gravity="center"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:textColor="@color/light_creame"
                android:text="DASHBOARD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView

            android:layout_width="match_parent"
            android:id="@+id/rcvDisplayInformation"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>




    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:background="@color/light_creame"
        android:layout_height="match_parent">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/loutHome"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold"
                    android:text="HOME"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/dark_colour_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loutAddDetails"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold"
                    android:text="ADD DETAILS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/dark_colour_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loutQuit"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold"
                    android:text="QUIT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/dark_colour_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>

            </LinearLayout>



            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:id="@+id/txtVersion"
                android:textColor="@color/dark_colour_header"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="dddd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>



        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>