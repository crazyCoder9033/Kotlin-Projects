<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.HomePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:background="#336487"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">
<!--        <androidx.appcompat.widget.Toolbar-->
<!--            android:background="#336487"-->
<!--            android:id="@+id/toolbar"-->
<!--            app:titleTextColor="#ffffff"-->
<!--            app:title="Expense Manager"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/sort"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>

            <TextView
                android:textSize="@dimen/_18ssp"
                android:textColor="#ffffff"
                android:text="Expense Manager"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:src="@drawable/calendar"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
                <ImageView
                    android:src="@drawable/king"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cdAddCategory"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_15sdp"
            app:cardBackgroundColor="#ADF3B0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">

            <LinearLayout
                android:layout_marginStart="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/plus"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#095C0C"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:textSize="@dimen/_20ssp"
                    android:text="ADD CATEGORY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cdAddIncome"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_15sdp"
            app:cardBackgroundColor="#DAF5FF"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">

            <LinearLayout
                android:layout_marginStart="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/money"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"/>

            <TextView
                android:textStyle="bold"
                android:textColor="#19678B"
                android:layout_marginStart="@dimen/_20sdp"
                android:textSize="@dimen/_20ssp"
                android:text="ADD INCOME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cdAddExpenses"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_15sdp"
            app:cardBackgroundColor="#D4E8FF"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">

            <LinearLayout
                android:layout_marginStart="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/money_one"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#4B81BF"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:textSize="@dimen/_20ssp"
                    android:text="ADD EXPENSES"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cdAllTransaction"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_15sdp"
            app:cardBackgroundColor="#FFECDD"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">

            <LinearLayout
                android:layout_marginStart="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/money_three"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#E38B44"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:textSize="@dimen/_20ssp"
                    android:text="ALL TRANSACTION"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cdReports"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_15sdp"
            app:cardBackgroundColor="#FEDADA"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">

            <LinearLayout
                android:layout_marginStart="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/money_four"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#FF7075"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:textSize="@dimen/_20ssp"
                    android:text="REPORTS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>





    </LinearLayout>

</LinearLayout>